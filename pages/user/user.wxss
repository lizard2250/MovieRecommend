/* pages/user/user.wxss */
.profile-section {
  background-color: #fff;
  padding: 30rpx 20rpx;
  margin-bottom: 20rpx;
  position: relative;
}

.profile-header {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 30rpx;
}

.avatar-placeholder {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 30rpx;
  background-color: #e0e0e0;
}

.user-info {
  flex: 1;
}

.username {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.user-id {
  font-size: 24rpx;
  color: #999;
}

.login-btn {
  background-color: #3a86ff;
  color: #fff;
  font-size: 30rpx;
  padding: 15rpx 30rpx;
  border-radius: 30rpx;
  font-weight: normal;
}

.menu-section {
  margin-bottom: 20rpx;
}

.menu-group {
  margin-bottom: 20rpx;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 24rpx 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 20rpx;
}

.menu-text {
  flex: 1;
  font-size: 30rpx;
  color: #333;
}

.menu-arrow {
  font-size: 28rpx;
  color: #c0c0c0;
}

.logout-section {
  padding: 20rpx;
  margin-top: 40rpx;
}

.logout-btn {
  width: 100%;
  background-color: #fff;
  color: #ff3b30;
  font-size: 30rpx;
  padding: 20rpx 0;
  border-radius: 8rpx;
  font-weight: normal;
}