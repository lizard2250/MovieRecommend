/* pages/user/user.wxss */
.profile-section {
  background-color: #fff;
  padding: 30rpx 20rpx;
  margin-bottom: 20rpx;
  position: relative;
}

.profile-header {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 30rpx;
}

.avatar-placeholder {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 30rpx;
  background-color: #e0e0e0;
}

.user-info {
  flex: 1;
}

.username {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.user-id {
  font-size: 24rpx;
  color: #999;
}

.login-btn {
  background-color: #3a86ff;
  color: #fff;
  font-size: 30rpx;
  padding: 15rpx 30rpx;
  border-radius: 30rpx;
  font-weight: normal;
}

.user-stats {
  display: flex;
  justify-content: space-around;
  padding: 20rpx 0;
  border-top: 1rpx solid #f5f5f5;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

.preference-section {
  margin-bottom: 20rpx;
  padding: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.tag-container {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 20rpx;
}

.tag {
  background-color: #f0f6ff;
  color: #3a86ff;
  font-size: 24rpx;
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
  margin-right: 16rpx;
  margin-bottom: 16rpx;
}

.chart-container {
  height: 300rpx;
  margin-top: 20rpx;
}

.preference-chart {
  width: 100%;
  height: 100%;
}

.menu-section {
  margin-bottom: 20rpx;
}

.menu-group {
  margin-bottom: 20rpx;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 24rpx 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 20rpx;
}

.menu-text {
  flex: 1;
  font-size: 30rpx;
  color: #333;
}

.menu-arrow {
  font-size: 28rpx;
  color: #c0c0c0;
}

.recent-section {
  margin-bottom: 20rpx;
  padding: 20rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.more {
  font-size: 24rpx;
  color: #3a86ff;
}

.scroll-view-x {
  white-space: nowrap;
  width: 100%;
}

.item-container {
  display: flex;
  padding: 10rpx 0;
}

.item {
  display: inline-flex;
  flex-direction: column;
  margin-right: 20rpx;
  width: 200rpx;
}

.item-image {
  width: 200rpx;
  height: 280rpx;
  border-radius: 8rpx;
}

.item-info {
  margin-top: 10rpx;
  width: 100%;
}

.item-title {
  font-size: 26rpx;
  color: #333;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.item-rating {
  display: flex;
  align-items: center;
  margin-top: 4rpx;
}

.rating-score {
  font-size: 24rpx;
  color: #ff9800;
  font-weight: 600;
  margin-right: 8rpx;
}

.rating-count {
  font-size: 22rpx;
  color: #999;
}

.logout-section {
  padding: 20rpx;
  margin-top: 40rpx;
}

.logout-btn {
  width: 100%;
  background-color: #fff;
  color: #ff3b30;
  font-size: 30rpx;
  padding: 20rpx 0;
  border-radius: 8rpx;
  font-weight: normal;
}