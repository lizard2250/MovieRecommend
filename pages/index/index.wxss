/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
  width: 80%;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}

.avatar-wrapper {
  padding: 0;
  width: 56px !important;
  border-radius: 8px;
  margin-top: 40px;
  margin-bottom: 40px;
}

.avatar {
  display: block;
  width: 56px;
  height: 56px;
}

.nickname-wrapper {
  display: flex;
  width: 100%;
  padding: 16px;
  box-sizing: border-box;
  border-top: .5px solid rgba(0, 0, 0, 0.1);
  border-bottom: .5px solid rgba(0, 0, 0, 0.1);
  color: black;
}

.nickname-label {
  width: 105px;
}

.nickname-input {
  flex: 1;
}

.banner {
  width: 100%;
  height: 350rpx;
  margin-bottom: 20rpx;
}

.banner image {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
}

.section {
  margin-bottom: 30rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
  padding: 0 10rpx;
}

.section-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
}

.more {
  font-size: 24rpx;
  color: #666;
}

.scroll-view-x {
  white-space: nowrap;
  width: 100%;
}

.item-container {
  display: flex;
  padding: 10rpx 0;
}

.item {
  display: inline-flex;
  flex-direction: column;
  margin-right: 20rpx;
  width: 200rpx;
}

.item-image {
  width: 200rpx;
  height: 280rpx;
  border-radius: 8rpx;
}

.item-info {
  margin-top: 10rpx;
  width: 100%;
}

.item-title {
  font-size: 26rpx;
  color: #333;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.item-rating {
  display: flex;
  align-items: center;
  margin-top: 4rpx;
}

.rating-score {
  font-size: 24rpx;
  color: #ff9800;
  font-weight: 600;
  margin-right: 8rpx;
}

.rating-count {
  font-size: 22rpx;
  color: #999;
}

.ai-recommendation {
  padding: 20rpx;
}

.ai-header {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 15rpx;
}

.login-prompt {
  padding: 30rpx;
  text-align: center;
  color: #3a86ff;
  font-size: 28rpx;
}
