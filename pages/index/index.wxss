/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
  width: 80%;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}

.avatar-wrapper {
  padding: 0;
  width: 56px !important;
  border-radius: 8px;
  margin-top: 40px;
  margin-bottom: 40px;
}

.avatar {
  display: block;
  width: 56px;
  height: 56px;
}

.nickname-wrapper {
  display: flex;
  width: 100%;
  padding: 16px;
  box-sizing: border-box;
  border-top: .5px solid rgba(0, 0, 0, 0.1);
  border-bottom: .5px solid rgba(0, 0, 0, 0.1);
  color: black;
}

.nickname-label {
  width: 105px;
}

.nickname-input {
  flex: 1;
}

.container {
  padding: 0 0 40rpx 0;
  background: #f8f8f8;
}

/* Search Bar */
.search-bar {
  margin: 20rpx 30rpx;
  height: 80rpx;
  background: #fff;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.search-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.search-placeholder {
  color: #999;
  font-size: 28rpx;
}

/* Banner */
.banner {
  width: 100%;
  height: 400rpx;
  margin-bottom: 20rpx;
}

.banner image {
  width: 100%;
  height: 100%;
}

.banner-title {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx;
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  background: linear-gradient(to top, rgba(0,0,0,0.7), transparent);
}

/* Section */
.section {
  margin: 0 0 30rpx 0;
  background: #fff;
  padding: 30rpx 0;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
}

.more {
  font-size: 26rpx;
  color: #666;
}

/* Scroll View */
.scroll-view-x {
  width: 100%;
  white-space: nowrap;
}

.item-container {
  display: inline-flex;
  padding: 0 20rpx;
}

.item {
  display: inline-flex;
  flex-direction: column;
  margin-right: 20rpx;
  width: 200rpx;
}

.item-image {
  width: 200rpx;
  height: 280rpx;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.item-info {
  margin-top: 12rpx;
  width: 100%;
}

.item-title {
  font-size: 26rpx;
  color: #333;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}

.item-rating {
  display: flex;
  align-items: center;
  margin-top: 8rpx;
}

.rating-score {
  font-size: 24rpx;
  color: #ff6b6b;
  font-weight: bold;
  margin-right: 8rpx;
}

.rating-count {
  font-size: 22rpx;
  color: #999;
}

/* Recommendation Container */
.recommendation-container {
  background: #f8f8f8;
  padding: 20rpx 0;
  margin-top: 10rpx;
}

/* Login Prompt */
.login-prompt {
  margin: 30rpx;
  padding: 30rpx;
  background: #fff;
  border-radius: 12rpx;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.login-prompt text {
  color: #3a86ff;
  font-size: 28rpx;
}
