/* pages/detail/detail.wxss */
.container {
  padding-bottom: 120rpx;
}

.header {
  position: relative;
  display: flex;
  padding: 30rpx;
  background: #f8f8f8;
}

.poster {
  width: 240rpx;
  height: 360rpx;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.info {
  flex: 1;
  margin-left: 30rpx;
  display: flex;
  flex-direction: column;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.other-name {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.rating {
  margin-bottom: 20rpx;
}

.score {
  font-size: 48rpx;
  color: #ff6b6b;
  font-weight: bold;
  margin-right: 10rpx;
}

.count {
  font-size: 24rpx;
  color: #999;
}

.basic-info {
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
}

/* 评分分布 */
.rating-detail {
  padding: 30rpx;
  background: #fff;
  margin-top: 20rpx;
}

.rating-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.rating-bars {
  padding: 10rpx 0;
}

.rating-bar {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.star-count {
  width: 80rpx;
  font-size: 24rpx;
  color: #666;
}

.bar-bg {
  flex: 1;
  height: 20rpx;
  background: #f0f0f0;
  border-radius: 10rpx;
  margin: 0 20rpx;
  overflow: hidden;
}

.bar-active {
  height: 100%;
  background: #ffd700;
  border-radius: 10rpx;
  transition: width 0.3s ease;
}

.vote-count {
  width: 80rpx;
  font-size: 24rpx;
  color: #999;
  text-align: right;
}

/* 影片信息 */
.movie-info {
  padding: 30rpx;
  background: #fff;
  margin-top: 20rpx;
}

.info-item {
  display: flex;
  margin-bottom: 20rpx;
}

.label {
  width: 120rpx;
  font-size: 28rpx;
  color: #666;
}

.content {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
}

/* 剧情简介 */
.summary {
  padding: 30rpx;
  background: #fff;
  margin-top: 20rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.summary-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.summary-content.truncated {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}

/* 操作按钮 */
.actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  padding: 20rpx 30rpx;
  background: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.header {
  display: flex;
  padding: 20rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.cover {
  width: 240rpx;
  height: 340rpx;
  border-radius: 8rpx;
  margin-right: 24rpx;
}

.meta {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 16rpx;
}

.category, .year, .duration {
  font-size: 24rpx;
  color: #666;
  margin-right: 16rpx;
  margin-bottom: 8rpx;
}

.rating-container {
  display: flex;
  align-items: center;
  margin-top: 8rpx;
}

.stars {
  display: flex;
  margin-right: 16rpx;
}

.star {
  width: 30rpx;
  height: 30rpx;
  margin-right: 4rpx;
}

.rating-count {
  font-size: 24rpx;
  color: #999;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.action-item image {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 8rpx;
}

.action-item text {
  font-size: 24rpx;
  color: #666;
}

.card {
  background-color: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 8rpx;
}

.card-title {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
  color: #333;
}

.description {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
}

.expand {
  color: #3a86ff;
  font-size: 26rpx;
  margin-top: 10rpx;
  text-align: right;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.more {
  font-size: 24rpx;
  color: #3a86ff;
}

.comment-item {
  display: flex;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 16rpx;
}

.comment-content {
  flex: 1;
}

.comment-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 8rpx;
}

.username {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

.comment-rating {
  font-size: 24rpx;
  color: #ff9800;
}

.comment-text {
  font-size: 26rpx;
  color: #333;
  line-height: 1.5;
  margin-bottom: 8rpx;
}

.comment-time {
  font-size: 22rpx;
  color: #999;
}

.sentiment {
  padding: 10rpx 0;
}

.sentiment-item {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.sentiment-label {
  width: 140rpx;
  font-size: 26rpx;
  color: #666;
}

.sentiment-item progress {
  flex: 1;
  margin: 0 20rpx;
}

.sentiment-value {
  font-size: 26rpx;
  color: #333;
  width: 80rpx;
  text-align: right;
}

.trend-chart {
  width: 100%;
  height: 400rpx;
  margin-top: 10rpx;
}

.scroll-view-x {
  white-space: nowrap;
  width: 100%;
}

.item-container {
  display: flex;
  padding: 10rpx 0;
}

.item {
  display: inline-flex;
  flex-direction: column;
  margin-right: 20rpx;
  width: 200rpx;
}

.item-image {
  width: 200rpx;
  height: 280rpx;
  border-radius: 8rpx;
}

.item-info {
  margin-top: 10rpx;
  width: 100%;
}

.item-title {
  font-size: 26rpx;
  color: #333;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.item-rating {
  display: flex;
  align-items: center;
  margin-top: 4rpx;
}

.rating-score {
  font-size: 24rpx;
  color: #ff9800;
  font-weight: 600;
  margin-right: 8rpx;
}

.rating-count {
  font-size: 22rpx;
  color: #999;
}

/* Rating Dialog */
.rating-dialog {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.rating-dialog-content {
  width: 80%;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
}

.rating-dialog-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.rating-dialog-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.rating-dialog-close {
  width: 40rpx;
  height: 40rpx;
}

.rating-stars {
  display: flex;
  justify-content: center;
  margin-bottom: 20rpx;
}

.rating-star {
  width: 60rpx;
  height: 60rpx;
  margin: 0 10rpx;
}

.rating-hint {
  text-align: center;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.rating-comment {
  width: 100%;
  height: 200rpx;
  background-color: #f7f7f7;
  border-radius: 8rpx;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  margin-bottom: 20rpx;
}

.rating-submit {
  background-color: #3a86ff;
  color: #fff;
  border-radius: 8rpx;
  font-size: 30rpx;
  margin-top: 20rpx;
}