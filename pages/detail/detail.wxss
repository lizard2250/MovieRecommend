/* pages/detail/detail.wxss */
.header {
  display: flex;
  padding: 20rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.cover {
  width: 240rpx;
  height: 340rpx;
  border-radius: 8rpx;
  margin-right: 24rpx;
}

.info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
  line-height: 1.3;
}

.meta {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 16rpx;
}

.category, .year, .duration {
  font-size: 24rpx;
  color: #666;
  margin-right: 16rpx;
  margin-bottom: 8rpx;
}

.rating-container {
  display: flex;
  align-items: center;
  margin-top: 8rpx;
}

.rating {
  font-size: 36rpx;
  font-weight: bold;
  color: #ff9800;
  margin-right: 16rpx;
}

.stars {
  display: flex;
  margin-right: 16rpx;
}

.star {
  width: 30rpx;
  height: 30rpx;
  margin-right: 4rpx;
}

.rating-count {
  font-size: 24rpx;
  color: #999;
}

.actions {
  display: flex;
  justify-content: space-around;
  padding: 20rpx 0;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.action-item image {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 8rpx;
}

.action-item text {
  font-size: 24rpx;
  color: #666;
}

.card {
  background-color: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 8rpx;
}

.card-title {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
  color: #333;
}

.description {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
}

.expand {
  color: #3a86ff;
  font-size: 26rpx;
  margin-top: 10rpx;
  text-align: right;
}

.info-item {
  display: flex;
  margin-bottom: 12rpx;
}

.info-label {
  font-size: 28rpx;
  color: #999;
  width: 160rpx;
}

.info-value {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.more {
  font-size: 24rpx;
  color: #3a86ff;
}

.comment-item {
  display: flex;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 16rpx;
}

.comment-content {
  flex: 1;
}

.comment-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 8rpx;
}

.username {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

.comment-rating {
  font-size: 24rpx;
  color: #ff9800;
}

.comment-text {
  font-size: 26rpx;
  color: #333;
  line-height: 1.5;
  margin-bottom: 8rpx;
}

.comment-time {
  font-size: 22rpx;
  color: #999;
}

.sentiment {
  padding: 10rpx 0;
}

.sentiment-item {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.sentiment-label {
  width: 140rpx;
  font-size: 26rpx;
  color: #666;
}

.sentiment-item progress {
  flex: 1;
  margin: 0 20rpx;
}

.sentiment-value {
  font-size: 26rpx;
  color: #333;
  width: 80rpx;
  text-align: right;
}

.trend-chart {
  width: 100%;
  height: 400rpx;
  margin-top: 10rpx;
}

.scroll-view-x {
  white-space: nowrap;
  width: 100%;
}

.item-container {
  display: flex;
  padding: 10rpx 0;
}

.item {
  display: inline-flex;
  flex-direction: column;
  margin-right: 20rpx;
  width: 200rpx;
}

.item-image {
  width: 200rpx;
  height: 280rpx;
  border-radius: 8rpx;
}

.item-info {
  margin-top: 10rpx;
  width: 100%;
}

.item-title {
  font-size: 26rpx;
  color: #333;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.item-rating {
  display: flex;
  align-items: center;
  margin-top: 4rpx;
}

.rating-score {
  font-size: 24rpx;
  color: #ff9800;
  font-weight: 600;
  margin-right: 8rpx;
}

.rating-count {
  font-size: 22rpx;
  color: #999;
}

/* Rating Dialog */
.rating-dialog {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.rating-dialog-content {
  width: 80%;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
}

.rating-dialog-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.rating-dialog-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.rating-dialog-close {
  width: 40rpx;
  height: 40rpx;
}

.rating-stars {
  display: flex;
  justify-content: center;
  margin-bottom: 20rpx;
}

.rating-star {
  width: 60rpx;
  height: 60rpx;
  margin: 0 10rpx;
}

.rating-hint {
  text-align: center;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.rating-comment {
  width: 100%;
  height: 200rpx;
  background-color: #f7f7f7;
  border-radius: 8rpx;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  margin-bottom: 20rpx;
}

.rating-submit {
  background-color: #3a86ff;
  color: #fff;
  border-radius: 8rpx;
  font-size: 30rpx;
  margin-top: 20rpx;
}