/* pages/category/category.wxss */
.container {
  position: relative;
  padding-bottom: 100rpx;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background-color: #fff;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.filter-btn {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #666;
}

.filter-btn image {
  width: 32rpx;
  height: 32rpx;
  margin-left: 8rpx;
}

.category-tabs {
  background-color: #fff;
  border-bottom: 1rpx solid #f0f0f0;
}

.scroll-view-x {
  white-space: nowrap;
  width: 100%;
}

.tab-container {
  display: flex;
  padding: 0 10rpx;
}

.tab {
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  color: #666;
  position: relative;
  display: inline-block;
}

.tab.active {
  color: #3a86ff;
  font-weight: 500;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 30rpx;
  right: 30rpx;
  height: 6rpx;
  background-color: #3a86ff;
  border-radius: 3rpx;
}

.sort-options {
  display: flex;
  background-color: #fff;
  padding: 20rpx;
  margin-bottom: 10rpx;
}

.sort-item {
  font-size: 26rpx;
  color: #666;
  margin-right: 40rpx;
  position: relative;
}

.sort-item.active {
  color: #3a86ff;
  font-weight: 500;
}

.sort-item.active::after {
  content: '';
  position: absolute;
  bottom: -8rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 16rpx;
  height: 6rpx;
  background-color: #3a86ff;
  border-radius: 3rpx;
}

.content {
  margin-bottom: 20rpx;
}

/* Grid View */
.grid-view {
  display: flex;
  flex-wrap: wrap;
  padding: 10rpx;
  justify-content: space-between;
}

.grid-item {
  width: calc(50% - 15rpx);
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 8rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.grid-image {
  width: 100%;
  height: 400rpx;
  border-top-left-radius: 8rpx;
  border-top-right-radius: 8rpx;
}

.grid-info {
  padding: 15rpx;
}

.grid-title {
  font-size: 28rpx;
  color: #333;
  display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-bottom: 8rpx;
}

.grid-rating {
  font-size: 24rpx;
  color: #ff9800;
  font-weight: 600;
}

/* List View */
.list-view {
  background-color: #fff;
}

.list-item {
  display: flex;
  padding: 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.list-image {
  width: 150rpx;
  height: 200rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.list-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.list-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 10rpx;
}

.list-meta {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 10rpx;
}

.list-category, .list-year {
  font-size: 24rpx;
  color: #999;
  margin-right: 16rpx;
}

.list-rating {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.rating-score {
  font-size: 24rpx;
  color: #ff9800;
  font-weight: 600;
  margin-right: 8rpx;
}

.rating-count {
  font-size: 22rpx;
  color: #999;
}

.list-description {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

/* View Mode Toggle */
.view-toggle {
  position: fixed;
  right: 30rpx;
  bottom: 100rpx;
  width: 80rpx;
  height: 80rpx;
  background-color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  z-index: 10;
}

.view-toggle image {
  width: 40rpx;
  height: 40rpx;
}

/* Loading & No More */
.loading, .no-more {
  text-align: center;
  padding: 30rpx 0;
  font-size: 26rpx;
  color: #999;
}

.no-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.no-content image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.no-content text {
  font-size: 30rpx;
  color: #666;
}

/* Filter Panel */
.filter-panel {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1000;
  pointer-events: none;
  opacity: 0;
  transition: opacity 0.3s;
}

.filter-panel.show {
  pointer-events: auto;
  opacity: 1;
}

.filter-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
}

.filter-content {
  position: absolute;
  top: 0;
  right: 0;
  width: 80%;
  height: 100%;
  background-color: #fff;
  transform: translateX(100%);
  transition: transform 0.3s;
  overflow-y: auto;
}

.filter-panel.show .filter-content {
  transform: translateX(0);
}

.filter-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.filter-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.filter-close image {
  width: 32rpx;
  height: 32rpx;
}

.filter-section {
  padding: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.filter-section-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.tag-container {
  display: flex;
  flex-wrap: wrap;
}

.filter-tag {
  background-color: #f5f5f5;
  border-radius: 30rpx;
  padding: 10rpx 20rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  font-size: 26rpx;
  color: #333;
}

.filter-tag.active {
  background-color: #e6f0ff;
  color: #3a86ff;
  border: 1rpx solid #3a86ff;
}

.filter-actions {
  display: flex;
  padding: 30rpx 20rpx;
}

.reset-btn, .confirm-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 10rpx;
}

.reset-btn {
  background-color: #f5f5f5;
  color: #666;
}

.confirm-btn {
  background-color: #3a86ff;
  color: #fff;
}