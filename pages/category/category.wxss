/* pages/category/category.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
}

/* 顶部切换栏 */
.tabs {
  display: flex;
  justify-content: center;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
  padding: 10rpx;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab.active {
  color: #ff4d4f;
  font-weight: bold;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background-color: #ff4d4f;
  border-radius: 2rpx;
}

/* 视图模式切换 */
.view-mode {
  display: flex;
  justify-content: flex-end;
  margin-bottom: 20rpx;
}

.mode-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #fff;
  border-radius: 8rpx;
  margin-left: 10rpx;
}

.mode-btn.active {
  background-color: #ff4d4f;
}

.mode-btn.active .iconfont {
  color: #fff;
}

/* 内容列表 */
.content-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

/* 网格视图 */
.grid-view .item {
  width: 48%;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
  overflow: hidden;
}

.grid-view .poster {
  width: 100%;
  height: 400rpx;
}

.grid-view .info {
  padding: 20rpx;
}

.grid-view .title {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.grid-view .meta {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.grid-view .rating {
  color: #ff4d4f;
  font-size: 24rpx;
  margin-right: 10rpx;
}

.grid-view .rating-count {
  color: #999;
  font-size: 24rpx;
}

.grid-view .details {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
  font-size: 24rpx;
  color: #666;
}

.grid-view .category {
  font-size: 24rpx;
  color: #999;
}

/* 列表视图 */
.list-view .item {
  width: 100%;
  display: flex;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
  overflow: hidden;
}

.list-view .poster {
  width: 200rpx;
  height: 280rpx;
}

.list-view .info {
  flex: 1;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.list-view .title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.list-view .meta {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.list-view .rating {
  color: #ff4d4f;
  font-size: 28rpx;
  margin-right: 10rpx;
}

.list-view .rating-count {
  color: #999;
  font-size: 24rpx;
}

.list-view .details {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
  font-size: 26rpx;
  color: #666;
}

.list-view .category {
  font-size: 24rpx;
  color: #999;
}

/* 加载更多 */
.loading-more, .no-more {
  text-align: center;
  padding: 20rpx 0;
  color: #999;
  font-size: 24rpx;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background-color: #fff;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.filter-btn {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #666;
}

.filter-btn image {
  width: 32rpx;
  height: 32rpx;
  margin-left: 8rpx;
}

.category-tabs {
  background-color: #fff;
  border-bottom: 1rpx solid #f0f0f0;
}

.scroll-view-x {
  white-space: nowrap;
  width: 100%;
}

.tab-container {
  display: flex;
  padding: 0 10rpx;
}

.sort-options {
  display: flex;
  background-color: #fff;
  padding: 20rpx;
  margin-bottom: 10rpx;
}

.sort-item {
  font-size: 26rpx;
  color: #666;
  margin-right: 40rpx;
  position: relative;
}

.sort-item.active {
  color: #3a86ff;
  font-weight: 500;
}

.sort-item.active::after {
  content: '';
  position: absolute;
  bottom: -8rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 16rpx;
  height: 6rpx;
  background-color: #3a86ff;
  border-radius: 3rpx;
}

.content {
  margin-bottom: 20rpx;
}

/* View Mode Toggle */
.view-toggle {
  position: fixed;
  right: 30rpx;
  bottom: 100rpx;
  width: 80rpx;
  height: 80rpx;
  background-color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  z-index: 10;
}

.view-toggle image {
  width: 40rpx;
  height: 40rpx;
}

/* Loading & No More */
.loading, .no-content {
  text-align: center;
  padding: 30rpx 0;
  font-size: 26rpx;
  color: #999;
}

.no-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.no-content image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.no-content text {
  font-size: 30rpx;
  color: #666;
}

/* Filter Panel */
.filter-panel {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1000;
  pointer-events: none;
  opacity: 0;
  transition: opacity 0.3s;
}

.filter-panel.show {
  pointer-events: auto;
  opacity: 1;
}

.filter-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
}

.filter-content {
  position: absolute;
  top: 0;
  right: 0;
  width: 80%;
  height: 100%;
  background-color: #fff;
  transform: translateX(100%);
  transition: transform 0.3s;
  overflow-y: auto;
}

.filter-panel.show .filter-content {
  transform: translateX(0);
}

.filter-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.filter-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.filter-close image {
  width: 32rpx;
  height: 32rpx;
}

.filter-section {
  padding: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.filter-section-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.tag-container {
  display: flex;
  flex-wrap: wrap;
}

.filter-tag {
  background-color: #f5f5f5;
  border-radius: 30rpx;
  padding: 10rpx 20rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  font-size: 26rpx;
  color: #333;
}

.filter-tag.active {
  background-color: #e6f0ff;
  color: #3a86ff;
  border: 1rpx solid #3a86ff;
}

.filter-actions {
  display: flex;
  padding: 30rpx 20rpx;
}

.reset-btn, .confirm-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 10rpx;
}

.reset-btn {
  background-color: #f5f5f5;
  color: #666;
}

.confirm-btn {
  background-color: #3a86ff;
  color: #fff;
}