/* pages/search/search.wxss */
.container {
  min-height: 100vh;
  background: #f8f8f8;
}

/* Search Header */
.search-header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  padding: 20rpx 30rpx;
  background: #fff;
  display: flex;
  align-items: center;
  z-index: 100;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.search-bar {
  flex: 1;
  height: 72rpx;
  background: #f5f5f5;
  border-radius: 36rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  margin-right: 20rpx;
}

.search-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 16rpx;
}

.search-input {
  flex: 1;
  height: 100%;
  font-size: 28rpx;
  color: #333;
}

.clear-icon {
  width: 36rpx;
  height: 36rpx;
  padding: 10rpx;
}

.cancel-btn {
  font-size: 30rpx;
  color: #666;
  padding: 10rpx;
}

/* Search History */
.search-history {
  margin-top: 132rpx;
  padding: 30rpx;
  background: #fff;
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.history-title {
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
}

.delete-icon {
  width: 36rpx;
  height: 36rpx;
  padding: 10rpx;
}

.history-list {
  display: flex;
  flex-wrap: wrap;
}

.history-item {
  display: flex;
  align-items: center;
  padding: 12rpx 24rpx;
  background: #f5f5f5;
  border-radius: 30rpx;
  margin: 10rpx 20rpx 10rpx 0;
}

.history-icon {
  width: 28rpx;
  height: 28rpx;
  margin-right: 10rpx;
}

.history-text {
  font-size: 26rpx;
  color: #666;
}

/* Search Results */
.search-results {
  margin-top: 132rpx;
  min-height: calc(100vh - 132rpx);
  background: #fff;
}

.loading {
  padding: 40rpx;
  text-align: center;
}

.loading-icon {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 20rpx;
}

.loading text {
  font-size: 26rpx;
  color: #999;
}

.no-result {
  padding: 120rpx 40rpx;
  text-align: center;
}

.no-result-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.no-result text {
  font-size: 28rpx;
  color: #999;
}

.result-list {
  padding: 20rpx 30rpx;
}

.result-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.movie-poster {
  width: 160rpx;
  height: 220rpx;
  border-radius: 12rpx;
  margin-right: 24rpx;
}

.movie-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.movie-title {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.movie-original {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 16rpx;
}

.movie-meta {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.movie-year {
  font-size: 26rpx;
  color: #666;
  margin-right: 20rpx;
}

.movie-rating {
  font-size: 26rpx;
  color: #ff6b6b;
  font-weight: bold;
}

.movie-genre {
  font-size: 26rpx;
  color: #666;
  margin-top: auto;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.clear-history {
  font-size: 26rpx;
  color: #999;
}

.tag-container {
  display: flex;
  flex-wrap: wrap;
  padding: 0 20rpx 20rpx;
}

.tag {
  background-color: #f5f5f5;
  border-radius: 30rpx;
  padding: 12rpx 30rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  font-size: 26rpx;
  color: #333;
}

.filter-tabs {
  display: flex;
  background-color: #fff;
  padding: 0 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.tab {
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab.active {
  color: #3a86ff;
  font-weight: 500;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 30rpx;
  right: 30rpx;
  height: 6rpx;
  background-color: #3a86ff;
  border-radius: 3rpx;
}

.result-count {
  padding: 20rpx;
  font-size: 26rpx;
  color: #999;
  background-color: #fff;
}

.loading, .no-more {
  text-align: center;
  padding: 30rpx 0;
  font-size: 26rpx;
  color: #999;
}

.no-result-tip {
  font-size: 26rpx;
  color: #999;
}

.search-history, .hot-search, .ai-suggestions {
  background-color: #fff;
  margin-bottom: 20rpx;
  border-radius: 8rpx;
}