/* pages/search/search.wxss */
.search-header {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: #fff;
  position: sticky;
  top: 0;
  z-index: 100;
}

.search-bar {
  flex: 1;
  display: flex;
  align-items: center;
  background-color: #f5f5f5;
  border-radius: 32rpx;
  padding: 0 20rpx;
  height: 72rpx;
  margin-right: 20rpx;
}

.search-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 16rpx;
}

.search-input {
  flex: 1;
  height: 72rpx;
  font-size: 28rpx;
}

.clear-icon {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.clear-icon image {
  width: 32rpx;
  height: 32rpx;
}

.search-btn {
  font-size: 30rpx;
  color: #3a86ff;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.clear-history {
  font-size: 26rpx;
  color: #999;
}

.history-list {
  padding: 0 20rpx;
}

.history-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.history-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 20rpx;
}

.history-text {
  font-size: 28rpx;
  color: #333;
}

.tag-container {
  display: flex;
  flex-wrap: wrap;
  padding: 0 20rpx 20rpx;
}

.tag {
  background-color: #f5f5f5;
  border-radius: 30rpx;
  padding: 12rpx 30rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  font-size: 26rpx;
  color: #333;
}

.filter-tabs {
  display: flex;
  background-color: #fff;
  padding: 0 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.tab {
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab.active {
  color: #3a86ff;
  font-weight: 500;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 30rpx;
  right: 30rpx;
  height: 6rpx;
  background-color: #3a86ff;
  border-radius: 3rpx;
}

.result-count {
  padding: 20rpx;
  font-size: 26rpx;
  color: #999;
  background-color: #fff;
}

.result-list {
  background-color: #fff;
}

.result-item {
  display: flex;
  padding: 30rpx 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.result-image {
  width: 150rpx;
  height: 200rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.result-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.result-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 10rpx;
}

.result-meta {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 10rpx;
}

.result-category, .result-year, .result-director {
  font-size: 24rpx;
  color: #999;
  margin-right: 16rpx;
}

.result-rating {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.rating-score {
  font-size: 24rpx;
  color: #ff9800;
  font-weight: 600;
  margin-right: 8rpx;
}

.rating-count {
  font-size: 22rpx;
  color: #999;
}

.result-description {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.loading, .no-more {
  text-align: center;
  padding: 30rpx 0;
  font-size: 26rpx;
  color: #999;
}

.no-result {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.no-result image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.no-result text {
  font-size: 30rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.no-result-tip {
  font-size: 26rpx;
  color: #999;
}

.search-history, .hot-search, .search-results, .ai-suggestions {
  background-color: #fff;
  margin-bottom: 20rpx;
  border-radius: 8rpx;
}